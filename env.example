# Database Connection (REQUIRED)
# Get this from your Neon or Railway PostgreSQL database
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# Environment (automatically set by platform)
NODE_ENV=development

# Server Port (not needed on Vercel, optional for local dev)
PORT=5000

